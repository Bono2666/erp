<odoo>
  <data>
    <!-- explicit tree view definition -->

    <!-- sales.payment_terms tree view -->
    <record id="sales.payment_terms_view_tree" model="ir.ui.view">
      <field name="name">Payment Terms</field>
      <field name="model">sales.payment_terms</field>
      <field name="arch" type="xml">
        <tree>
          <!-- Add your fields here -->
          <field name="payment_terms_id"/>
          <field name="sales_text"/>
          <field name="account_type" widget="many2many_tags"/>
          <field name="baseline_date"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.cust_category_tree">
      <field name="name">Customer Category</field>
      <field name="model">sales.cust_category</field>
      <field name="arch" type="xml">
        <tree>
          <field name="category_id"/>
          <field name="category_name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.cust_type_tree">
      <field name="name">Customer Type</field>
      <field name="model">sales.cust_type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="type_id"/>
          <field name="type_name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.cust_area_tree">
      <field name="name">Customer Area</field>
      <field name="model">sales.cust_area</field>
      <field name="arch" type="xml">
        <tree>
          <field name="area_id"/>
          <field name="area_name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.customer_tree">
      <field name="name">Customer</field>
      <field name="model">sales.customer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="customer_id"/>
          <field name="customer_name"/>
          <field name="cust_category"/>
          <field name="cust_type"/>
          <field name="cust_area"/>
          <field name="sales_code"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.products_kanban">
      <field name="name">Products</field>
      <field name="model">sales.products</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
          <template>
            <t t-name="kanban-box">
              <div class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                <div class="o_kanban_image me-1">
                  <img t-att-src="kanban_image('sales.products', 'image', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                </div>
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top mb-0">
                      <div class="o_kanban_record_headings">
                          <strong class="o_kanban_record_title">
                              <field name="product_name"/>
                          </strong>
                      </div>
                  </div>
                  <div class="mt-1">
                    <field name="product_type"/>
                  </div>
                </div>
              </div>
            </t>
          </template>
        </kanban>
      </field>
    </record>

    <!-- sales.product_type tree view -->
    <record id="sales.product_type_view_tree" model="ir.ui.view">
      <field name="name">sales.product_type.view.tree</field>
      <field name="model">sales.product_type</field>
      <field name="arch" type="xml">
        <tree>
          <!-- Add your fields here -->
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- sales.product_unit tree view -->
    <record id="sales.product_unit_view_tree" model="ir.ui.view">
      <field name="name">sales.product_unit.view.tree</field>
      <field name="model">sales.product_unit</field>
      <field name="arch" type="xml">
        <tree>
          <!-- Add your fields here -->
          <field name="qty"/>
          <field name="uom"/>
          <field name="base_qty"/>
          <field name="base_uom"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="sales.price_condition_tree">
      <field name="name">Price Condition</field>
      <field name="model">sales.price_condition</field>
      <field name="arch" type="xml">
        <tree>
          <field name="price_id"/>
          <field name="price_name"/>
          <field name="date_start"/>
          <field name="date_end"/>
        </tree>
      </field>
    </record>

    <!-- sales.payment_terms form view -->
    <record id="sales.payment_terms_view_form" model="ir.ui.view">
      <field name="name">sales.payment_terms.view.form</field>
      <field name="model">sales.payment_terms</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <field name="payment_terms_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="sales_text" options="{'line_breaks': False}" widget="text" placeholder="e.g. 2% 10, Net 30"/>
                </div>
              </h1>
            </div>
            <notebook>
              <page string="General Information" name="general_information">
                <group>
                  <field name="account_type" widget="many2many_tags"/>
                  <field name="baseline_date"/>
                </group>
              </page>
              <page string="Payment Terms" name="payment_terms">
                <field name="payment_terms_ids" string="Payment Terms">
                  <tree editable="bottom">
                    <field name="percentage"/>
                    <field name="no_of_days"/>
                    <field name="explanation"/>
                    <field name="payment_terms_id" column_invisible="1"/>
                  </tree>
                  <form>
                    <field name="percentage"/>
                    <field name="no_of_days"/>
                    <field name="explanation"/>
                    <field name="payment_terms_id" column_invisible="1"/>
                  </form>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.cust_category form view -->
    <record id="sales.cust_category_view_form" model="ir.ui.view">
      <field name="name">sales.cust_category.view.form</field>
      <field name="model">sales.cust_category</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <field name="category_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="category_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Retail Customer"/>
                </div>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.cust_type form view -->
    <record id="sales.cust_type_view_form" model="ir.ui.view">
      <field name="name">sales.cust_type.view.form</field>
      <field name="model">sales.cust_type</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <field name="type_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="type_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Sales &amp; Distribution (SD) Customer"/>
                </div>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.cust_area form view -->
    <record id="sales.cust_area_view_form" model="ir.ui.view">
      <field name="name">sales.cust_area.view.form</field>
      <field name="model">sales.cust_area</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <field name="area_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="area_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. West Region"/>
                </div>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.customer form view -->
    <record id="sales.customer_view_form" model="ir.ui.view">
      <field name="name">sales.customer.view.form</field>
      <field name="model">sales.customer</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title mb24">
                <field name="customer_id"/>
                <h1>
                    <field id="company" options="{'line_breaks': False}" widget="text" class="text-break" name="customer_name" placeholder="e.g. PT Kreatif Citra Indonesia" required="1"/>
                </h1>
            </div>

            <group>
                <group>
                    <span class="o_form_label o_td_label" name="address_name">
                        <b>Address</b>
                    </span>
                    <div class="o_address_format">
                        <field name="address" placeholder="Street..."/>
                        <field name="district" placeholder="District" class="o_address_street" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        <field name="city" placeholder="City" class="o_address_city" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        <field name="state" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        <div name="partner_address_country" class="d-flex justify-content-between">
                            <field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </div>
                    </div>
                    <field name="npwp" placeholder="e.g. 08.178.554.2-123.321"/>
                </group>
                <group>
                    <field name="contact_name"/>
                    <field name="telephone" widget="phone"/>
                    <field name="email" widget="email" context="{'gravatar_image': True}"/>
                    <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                </group>
            </group>

            <notebook colspan="4">
                <page string="Shipping Addresses" name="shipping_addresses" autofocus="autofocus">
                    <field name="ship_to_ids" mode="kanban">
                        <kanban>
                            <field name="customer_id" invisible="1"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-att-class="oe_kanban_global_click">
                                        <div class="o_kanban_image">
                                            <img alt="Contact image" t-attf-src="sales/static/src/img/shipping.png"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="ship_name"/>
                                            <div t-if="record.address">
                                                <div>
                                                    <field name="district"/><t t-if="record.city"> </t>
                                                    <field name="city"/>
                                                </div>
                                                <field t-if="record.state.raw_value" name="state"/><t t-if="record.country"> </t>
                                                <field name="country"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                        <form string="Shipping Address">
                            <sheet>
                                <field name="customer_id" invisible="1"/>
                                <hr/>
                                <group>
                                    <field name="ship_name" string="Ship Name" required="1"/>
                                    <label for="address" string="Address"/>
                                    <div>
                                        <div class="o_address_format" name="div_address">
                                            <field name="address" placeholder="Street..."/>
                                            <field name="district" placeholder="District" class="o_address_street" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="city" placeholder="City" class="o_address_city" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="state" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        </div>
                                    </div>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                <page name="sales" string="Sales">
                    <group name="container_row_2">
                        <group string="Sales" name="sale" priority="1">
                            <field name="sales_code" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </group>
                        <group name="misc" string="Misc">
                            <field name="cust_category" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="cust_type" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="cust_area" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </group>
                    </group>
                </page>
                <page name="price_condition" string="Price Condition">
                    <field name="price_condition" placeholder="Price condition..." options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                </page>
                <page name="payment_terms" string="Payment Terms">
                    <field name="payment_terms" placeholder="Payment terms..." options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.products form view -->
    <record id="sales.products_view_form" model="ir.ui.view">
      <field name="name">sales.products.view.form</field>
      <field name="model">sales.products</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <field name="image" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <field name="product_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="product_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Dim Sum"/>
                </div>
              </h1>
            </div>
            <notebook>
              <page string="General Information" name="general_information">
                <group>
                  <field name="product_unit" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                  <field name="product_type" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.product_type form view -->
    <record id="sales.product_type_view_form" model="ir.ui.view">
      <field name="name">sales.product_type.view.form</field>
      <field name="model">sales.product_type</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <label for="name" string="Product Type"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Raw Materials"/>
                </div>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.product_unit form view -->
    <record id="sales.product_unit_view_form" model="ir.ui.view">
      <field name="name">sales.product_unit.view.form</field>
      <field name="model">sales.product_unit</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <span class="d-inline-flex">
                  <label for="qty" string="Quantity"/>
                  <field name="qty"/>
              </span>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="uom" options="{'line_breaks': False}" widget="text" placeholder="e.g. Piece" default_focus="1"/>
                </div>
              </h1>
            </div>
            <notebook>
              <page string="Base Information" name="base_information">
                <group>
                  <field name="base_qty"/>
                  <field name="base_uom"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- sales.price_condition form view -->
    <record id="sales.price_condition_view_form" model="ir.ui.view">
      <field name="name">sales.price_condition.view.form</field>
      <field name="model">sales.price_condition</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <field name="price_id"/>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="price_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. a 10% discount for a particular customer-material combination"/>
                </div>
              </h1>
            </div>
            <notebook>
              <page name="validity_period" string="Validity Period">
                <group>
                  <field name="date_start"/>
                  <field name="date_end"/>
                </group>
              </page>
              <page name="products" string="Products">
                <field name="product_ids" string="Products">
                  <tree editable="bottom">
                    <field name="product_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    <field name="price"/>
                    <field name="price_id" column_invisible="1"/>
                  </tree>
                  <form>
                    <field name="product_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    <field name="price"/>
                    <field name="price_id" column_invisible="1"/>
                  </form>
                </field>
              </page>
              <page name="customers" string="Customers">
                <field name="customer_ids" string="Customers">
                  <tree editable="bottom">
                    <field name="customer_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    <field name="price_id" column_invisible="1"/>
                  </tree>
                  <form>
                    <field name="customer_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                    <field name="price_id" column_invisible="1"/>
                  </form>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <!-- sales.payment_terms action window -->
    <record id="sales.payment_terms_action" model="ir.actions.act_window">
      <field name="name">Payment Terms</field>
      <field name="res_model">sales.payment_terms</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.cust_category_action">
      <field name="name">Customer Category</field>
      <field name="res_model">sales.cust_category</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.cust_type_action">
      <field name="name">Customer Type</field>
      <field name="res_model">sales.cust_type</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.cust_area_action">
      <field name="name">Customer Area</field>
      <field name="res_model">sales.cust_area</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.customer_action">
      <field name="name">Customer</field>
      <field name="res_model">sales.customer</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.products_action">
      <field name="name">Products</field>
      <field name="res_model">sales.products</field>
      <field name="view_mode">kanban,form</field>
    </record>
    <record id="sales.product_type_action" model="ir.actions.act_window">
      <field name="name">Product Type</field>
      <field name="res_model">sales.product_type</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="sales.product_unit_action" model="ir.actions.act_window">
      <field name="name">Product Unit</field>
      <field name="res_model">sales.product_unit</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="sales.price_condition_action">
      <field name="name">Price Condition</field>
      <field name="res_model">sales.price_condition</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Sales" id="sales.menu_root" sequence="30"/>

    <!-- menu categories -->

    <menuitem name="Master Data" id="sales.sales_master_menu" parent="sales.menu_root" sequence="1"/>

    <menuitem name="Customer" id="sales.customer_menu" parent="sales.sales_master_menu" sequence="1"/>
    <menuitem name="Product" id="sales.product_menu" parent="sales.sales_master_menu" sequence="2"/>
    <menuitem name="Price Condition" id="sales.price_condition_menu" parent="sales.sales_master_menu" action="sales.price_condition_action" sequence="3"/>

    <!-- actions -->
    <!-- This Menu Item must have a parent and an action -->

    <menuitem name="Customers" id="sales.customer_customer_menu" parent="sales.customer_menu" action="sales.customer_action" sequence="1"/>
    <menuitem name="Payment Terms" id="sales.payment_terms_menu_act"  parent="sales.customer_menu" action="sales.payment_terms_action" sequence="2"/>
    <menuitem name="Category" id="sales.cust_category" parent="sales.customer_menu"
              action="sales.cust_category_action" sequence="3"/>
    <menuitem name="Type" id="sales.cust_type" parent="sales.customer_menu"
              action="sales.cust_type_action" sequence="4"/>
    <menuitem name="Area" id="sales.cust_area" parent="sales.customer_menu"
              action="sales.cust_area_action" sequence="5"/>
    <menuitem name="Products" id="sales.product_product_menu" parent="sales.product_menu" action="sales.products_action" sequence="1"/>
    <menuitem id="product_type_menu_act" name="Type" parent="sales.product_menu" action="sales.product_type_action" sequence="2"/>
    <menuitem id="product_unit_menu_act" name="Unit of Measure" parent="sales.product_menu" action="sales.product_unit_action" sequence="3"/>
    
    <!-- general menus -->

    <menuitem name="Others" id="sales.sales_others_menu" parent="sales.sales_master_menu" sequence="4"/>
    
    <menuitem name="Country" id="sales.sales_country_act" parent="sales.sales_others_menu" action="general.country_action" sequence="1"/>
    <menuitem name="State" id="sales.sales_state_act" parent="sales.sales_others_menu" action="general.state_action" sequence="2"/>
    <menuitem name="City" id="sales.sales_city_act" parent="sales.sales_others_menu" action="general.city_action" sequence="3"/>
    <menuitem name="District" id="sales.sales_district_act" parent="sales.sales_others_menu" action="general.district_action" sequence="4"/>
    <menuitem name="Position" id="sales.sales_position_act" parent="sales.sales_others_menu" action="general.position_action" sequence="5"/>
    <menuitem name="Department" id="sales.sales_department_act" parent="sales.sales_others_menu" action="general.department_action" sequence="6"/>

  </data>
</odoo>
