<odoo>
  <data>
    <!-- explicit tree view definition -->

    <record model="ir.ui.view" id="employees.tree">
      <field name="name">Employees</field>
      <field name="model">employees.employees</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id"/>
          <field name="employee_name"/>
          <field name="position_id"/>
          <field name="department_id"/>
          <field name="sales_code"/>
        </tree>
      </field>
    </record>

    <!-- employees.employees form view -->
    <record id="employees.employees_view_form" model="ir.ui.view">
      <field name="name">employees.employees.view.form</field>
      <field name="model">employees.employees</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <div class="oe_title">
              <span class="d-inline-flex">
                  <field name="employee_id"/>
              </span>
              <h1>
                <div class="d-flex">
                  <field class="text-break" name="employee_name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Fulan" default_focus="1"/>
                </div>
              </h1>
            </div>
            <notebook>
              <page string="General Information" name="general_information">
                <group>
                  <field name="position_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                  <field name="department_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                  <field name="sales_code"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="employees.action_window">
      <field name="name">Employees</field>
      <field name="res_model">employees.employees</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Employees" id="employees.menu_root" sequence="50"/>

    <!-- menu categories -->

    <menuitem name="Employees" id="employees.employees_menu" parent="employees.menu_root" action="employees.action_window" sequence="1"/>
    <menuitem name="Master Data" id="employees.employees_master_menu" parent="employees.menu_root" sequence="2"/>

    <!-- general menus -->

    <menuitem name="Others" id="employees.employees_others_menu" parent="employees.employees_master_menu" sequence="4"/>
    
    <menuitem name="Country" id="employees.employees_country_act" parent="employees.employees_others_menu" action="general.country_action" sequence="1"/>
    <menuitem name="State" id="employees.employees_state_act" parent="employees.employees_others_menu" action="general.state_action" sequence="2"/>
    <menuitem name="City" id="employees.employees_city_act" parent="employees.employees_others_menu" action="general.city_action" sequence="3"/>
    <menuitem name="District" id="employees.employees_district_act" parent="employees.employees_others_menu" action="general.district_action" sequence="4"/>
    <menuitem name="Position" id="employees.employees_position_act" parent="employees.employees_others_menu" action="general.position_action" sequence="5"/>
    <menuitem name="Department" id="employees.employees_department_act" parent="employees.employees_others_menu" action="general.department_action" sequence="6"/>

  </data>
</odoo>
